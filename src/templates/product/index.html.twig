<!DOCTYPE html>

<title>Hello ProductController!</title>

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Products Page  âœ…</h1>

        {% if products is defined %}
            {% for product in products %}
                <ul>
                    <li><a href="{{ product.url}}"><h2>{{ product.name }}</h2></a></li>
                    <li>{{ product.price }}</li>
                    <li>{{ product.description }}</li>
                </ul>
            {% endfor %}
        {% elseif product is defined %}
        <h2>{{ product.name }}</h2>
        <p>Price {{ product.price }}</p>
        <p>Description {{ product.description }}</p>
        {% endif %}
    </div>
{% endblock %}
